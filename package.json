{
    "name": "milkdown",
    "version": "0.1.0",
    "packageManager": "yarn@3.1.1",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "yarn test:doc && yarn test:lint && yarn test:tsc && yarn test:unit",
        "test:unit": "jest --passWithNoTests",
        "test:tsc": "yarn workspaces foreach -vp --topological-dev --exclude 'milkdown,gh-pages' run tsc",
        "test:lint": "eslint **/{src,gh-pages}/**/*.{js,ts,tsx}",
        "test:doc": "prettier --check \"**/*.md\"",
        "test:pw": "pnpm run start:test --filter @milkdown/integration-test",
        "format": "lint-staged",
        "watch": "pnpm --filter=./packages --parallel run watch",
        "doc": "cd gh-pages && run start",
        "start": "concurrently -n watch,doc \"pnpm watch\" \"pnpm doc\"",
        "preview": "cd gh-pages && run preview",
        "build:packs": "pnpm --filter=./packages run build",
        "build:doc": "pnpm run build --filter @milkdown/gh-pages",
        "yarn:build:packs": "yarn workspaces foreach -vp --topological-dev --exclude 'milkdown,gh-pages' run build",
        "yarn:build:doc": "cd gh-pages && yarn run build",
        "postinstall": "husky install",
        "changeset": "changeset",
        "release": "changeset publish",
        "clear": "rimraf packages/*/{lib,tsconfig.tsbuildinfo,node_modules,.rollup.cache} && rimraf node_modules",
        "commit": "git-cz"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/preset-env": "^7.14.8",
        "@changesets/cli": "^2.16.0",
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@rollup/plugin-typescript": "^8.3.0",
        "@types/jest": "^27.0.0",
        "@types/rollup-plugin-auto-external": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@vitejs/plugin-react-refresh": "^1.3.3",
        "@vitejs/plugin-vue-jsx": "^1.1.5",
        "babel-jest": "^27.0.6",
        "concurrently": "^6.2.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "git-cz": "^4.7.6",
        "husky": "^7.0.0",
        "jest": "^27.0.0",
        "lint-staged": "^12.0.0",
        "prettier": "^2.4.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.61.1",
        "rollup-plugin-auto-external": "^2.0.0",
        "ts-jest": "^27.0.0",
        "tslib": "^2.3.1",
        "typescript": "~4.4.4",
        "vite": "^2.4.4"
    }
}
