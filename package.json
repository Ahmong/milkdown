{
    "name": "milkdown",
    "version": "0.1.0",
    "packageManager": "yarn@3.1.1",
    "private": true,
    "workspaces": [
        "packages/*",
        "../prosemirror/prosemirror-*"
    ],
    "scripts": {
        "test": "yarn test:doc && yarn test:lint && yarn test:tsc && yarn test:unit",
        "test:unit": "jest --passWithNoTests",
        "test:tsc": "yarn workspaces foreach -vp --topological-dev --exclude 'milkdown,gh-pages' run tsc",
        "test:lint": "eslint **/{src,gh-pages}/**/*.{js,ts,tsx}",
        "test:doc": "prettier --check \"**/*.md\"",
        "test:pw": "pnpm run start:test --filter @milkdown/integration-test",
        "format": "lint-staged",
        "watch": "pnpm --filter=./packages --parallel run watch",
        "doc": "cd gh-pages && run start",
        "start": "concurrently -n watch,doc \"pnpm watch\" \"pnpm doc\"",
        "preview": "cd gh-pages && run preview",
        "build:prosemirror": "yarn workspaces foreach -vp --topological --include 'prosemirror-*' run build",
        "build:md-core": "yarn workspaces foreach -vp --topological --include '@milkdown/!(plugin-*|preset-*|theme-*)' run build",
        "build:md-plugins": "yarn workspaces foreach -vp --topological-dev --include '@milkdown/{theme-*,preset-*,plugin-*}' run build",
        "build:milkdown": "yarn build:md-core && yarn build:md-plugins",
        "build:packs": "yarn build:prosemirror && yarn build:milkdown",
        "work:build": "yarn workspaces foreach -vp --include '{theme-zwnord,preset-zwmarkdown}' run build",
        "work:watch": "yarn workspaces foreach -p --include '{theme-zwnord,preset-zwmarkdown}' run watch",
        "build:doc": "cd gh-pages && yarn run build",
        "postinstall": "husky install",
        "changeset": "changeset",
        "release": "changeset publish",
        "clear:milkdown": "rimraf packages/*/{lib,tsconfig.tsbuildinfo,node_modules,.rollup.cache,node_modules}",
        "clear:prosemirror": "rimraf prosemirror/*/{node_modules,dist} || rimraf prosemirror/node_modules",
        "clear": "run clear:milkdown || run clear:prosemirror",
        "clear:root": "rimraf node_modules",
        "commit": "git-cz"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/preset-env": "^7.14.8",
        "@changesets/cli": "^2.16.0",
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@rollup/plugin-typescript": "^8.3.0",
        "@types/jest": "^27.0.0",
        "@types/rollup-plugin-auto-external": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@vitejs/plugin-react-refresh": "^1.3.3",
        "@vitejs/plugin-vue-jsx": "^1.1.5",
        "babel-jest": "^27.0.6",
        "concurrently": "^6.2.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "git-cz": "^4.7.6",
        "husky": "^7.0.0",
        "jest": "^27.0.0",
        "lint-staged": "^12.0.0",
        "prettier": "^2.4.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.61.1",
        "rollup-plugin-auto-external": "^2.0.0",
        "ts-jest": "^27.0.0",
        "tslib": "^2.3.1",
        "typescript": "~4.4.4",
        "vite": "^2.4.4"
    },
    "dependencies": {
        "polished": "^4.1.3"
    }
}
